{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "marconio",
  "version": "0.1.0",
  "identifier": "me.foureyes.marconio-xplat",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "marconio",
        "width": 400,
        "height": 300,
        "minWidth": 400,
        "minHeight": 300,
        "maxWidth": 400,
        "maxHeight": 300,
        "resizable": false,
        "maximizable": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
